<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_gravity="center"
	android:orientation="vertical"
	tools:context=".ui.staff.ThesisActivity">

	<include
		layout="@layout/toolbar_standard">
	</include>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:baselineAligned="false"
		android:orientation="horizontal">

		<fragment
			android:id="@+id/frag_master"
			android:name="com.nkyrim.itapp.ui.staff.StaffListFragment"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="2"
			tools:layout="@layout/fragment_staff_list"/>

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="@color/grey"/>

		<fragment
			android:id="@+id/frag_detail"
			android:name="com.nkyrim.itapp.ui.staff.StaffDetailFragment"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			tools:layout="@layout/fragment_staff_detail"/>
	</LinearLayout>

</LinearLayout>
